<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uprofile"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:layout_marginTop="8dp"
        android:src="@drawable/profilepic"

        app:civ_border_color="#B8BEC1"
        app:civ_border_width="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="@dimen/_12font_mdp"
        app:layout_constraintBottom_toTopOf="@+id/uprofeesion"
        app:layout_constraintStart_toEndOf="@+id/uprofile"
        app:layout_constraintTop_toTopOf="@+id/uprofile"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/uprofeesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/uprofile"
        app:layout_constraintStart_toStartOf="@+id/uname"
        app:layout_constraintTop_toBottomOf="@+id/uname" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/followbtn"
        android:layout_width="@dimen/_70mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttondesign"
        android:padding="5dp"
        android:text="Follow"
        android:textAlignment="center"
        android:textColor="#F7FFFFFF"
        android:textSize="@dimen/_10font_mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/uprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/uname"
        app:layout_constraintTop_toTopOf="@+id/uprofile"
        app:layout_constraintVertical_bias="0.652"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>